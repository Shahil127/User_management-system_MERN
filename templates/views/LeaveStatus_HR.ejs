<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Leave Status - HR</title>
    <!-- Bootstrap CSS -->
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="css/s3.css" />
  </head>
  <body>
    <div class="container mt-5">
      <div class="card">
        <div class="card-header bg-info text-white">
          <h1 class="text-center" , style="text-align: center">
            Leave Status - HR
          </h1>
          <h2 style="text-align: center">
            Welcome, <%= user_email.first_name %> <%= user_email.last_name %>
          </h2>
        </div>
        <div class="card-body">
          <table class="table table-striped">
            <caption style="text-align: center">
              <span class="table-caption">Details</span>
            </caption>
            <!-- HR leave status content goes here -->
            <thead>
              <tr>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Email</th>
                <th scope="col">Biometric-ID</th>
                <th scope="col">Phone Number</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td scope="row"><%= user_email.first_name%></td>
                <td><%= user_email.last_name%></td>
                <td><%= user_email.email%></td>
                <td><%= user_email.biometric_id%></td>
                <td><%= user_email.phone%></td>
              </tr>
            </tbody>
          </table>

          <!-- Show balance button -->
          <button id="show-balance-btn" class="btn btn-primary btn-block mt-3">
            Show Balance
          </button>

          <!-- Leave balance section -->
          <div id="leave-balance" style="display: none">
            <h4 class="mt-4">Leave Balance</h4>
            <ul>
              <li>Casual Leave: 11</li>
              <li>Medical Leave: 9</li>
              <li>Academic Leave: 9</li>
              <li>Campoff Leave: 9</li>
              <li>Duty Leave: 9</li>
              <li>Special Leave: 14</li>
            </ul>
          </div>

          <!-- Apply leave button -->
          <button id="apply-leave-btn" class="btn btn-primary btn-block mt-3">
            Apply Leave
          </button>

          <!-- View leave records button -->

          <a href="/user-list"
            ><button
              id="view-leave-records-btn"
              class="btn btn-primary btn-block mt-3"
            >
              View User Details
            </button></a
          >

          <!-- View leave records button -->
          <a href="register">
            <button
              id="view-leave-records-btn"
              class="btn btn-primary btn-block mt-3"
            >
              Register New User
            </button>
          </a>
        </div>
      </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <!-- Custom JavaScript -->
    <script src="js/leave_status_hr_script.js"></script>
  </body>
</html>
